<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEEAFE">

    <!-- Top info alert (initially gone) -->
    <include
        android:id="@+id/topAlert"
        layout="@layout/view_top_alert"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Игроки сверху вокруг колоды -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playersRecycler"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/topAlert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Колода в центре -->
    <FrameLayout
        android:id="@+id/deckContainer"
        android:layout_width="100dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/playersRecycler"
        app:layout_constraintBottom_toTopOf="@id/handRecycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">
        <!-- Карты колоды будут добавляться программно для красивого смещения -->
    </FrameLayout>

    <!-- Рука игрока внизу, drag & drop карты -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/handRecycler"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>